<!DOCTYPE html>
<html>
<head>
  <title>Sisyphus Light Hauling</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrap">

	<div class="container-fluid" id="navtop">
		<div class="row">
			<div id="headerplaceholder">
				<a href="/#"><img id="headerImage" src="/assets/slhtryagain.png"></a>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-10">
			</div>
			<div class="col-xs-2">
				<div class="collapse navbar-collapse" id="link_list">
					<span class="dropdown navLi">
						<a href="#" class="dropdown_toggle" data-toggle="dropdown">Local 41510
							<b class="caret"></b>
						</a>

						<ul class="dropdown-menu">
							<li><%= link_to "About", about_url %></li>
							<li><%= link_to "Contact", contact_url %></li>
							<% if signed_in? %>
							<li><%= link_to "Log Out", session_url,
								:method => :delete %></li>
							<% end %>
						</ul>
					</span>
				</div>
			</div>
		</div>

	</div>


	<%= yield %>

</div>


<script type="text/data" id="login_status">
  <%= signed_in? %>
</script>
<link href='http://fonts.googleapis.com/css?family=Josefin+Sans:600' rel='stylesheet' type='text/css'>
</body>
</html>
